        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/img_foto_jamban"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_photo_camera_black_18dp" />

    <TextView
        android:id="@+id/file_foto_dapur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/img_foto_dapur"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_photo_camera_black_18dp" />

    <TextView
        android:id="@+id/file_foto_belakang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/img_foto_belakang"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_photo_camera_black_18dp" />

    <TextView
        android:id="@+id/peta_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/img_gmap"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/markers" />

</LinearLayout>
</ScrollView>